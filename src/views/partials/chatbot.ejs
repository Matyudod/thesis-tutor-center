<div class="position-fixed d-flex flex-column" style="bottom:20px;right:20px;z-index: 2;">
    <div class="card card-primary card-outline direct-chat direct-chat-primary" id="chatbot" style="display:none;width: 400px;">
        <div class="card-header">
            <h3 class="card-title">TRUNG TÂM DUY TÂM</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" onclick="activeChatbot()">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove"  onclick="closeChatbot()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    
        <div class="card-body" style="height: 400px;">
    
            <div class="direct-chat-messages h-100" id="chat-content" >
            </div>
        </div>
        <div class="card-footer">
                <div class="input-group">
                    <input type="text" id="inputChat" placeholder="Nhập câu hỏi..." class="form-control">
                    <span class="input-group-append">
                        <button type="button" id="btnChat" class="btn btn-primary" onclick="getChat(inputChat)">Gửi</button>
                    </span>
                </div>
        </div>
    </div>
    <img src="/images/chatbot.png" class="ms-auto" alt="Chatbot" width="75"  height="75" onclick="activeChatbot()">
</div>
